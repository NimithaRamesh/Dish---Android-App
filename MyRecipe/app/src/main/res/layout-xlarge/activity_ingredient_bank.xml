<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/lay"
    tools:context="com.example.sahithi.splashscreen.ingridientBank">


    <EditText
        android:id="@+id/txtItem"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/hintTxtItem"
        android:layout_marginTop="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnDel"
        android:layout_marginStart="42dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblBtnAdd"
        android:layout_marginLeft="24dp"
        android:layout_alignBaseline="@android:id/empty"
        android:layout_alignBottom="@android:id/empty"
        android:layout_alignStart="@android:id/empty"
        android:layout_marginStart="48dp" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtEmpty"
        android:gravity="center_horizontal"
        android:layout_alignBaseline="@+id/txtItem"
        android:layout_alignBottom="@+id/txtItem"
        android:layout_toEndOf="@+id/txtItem"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/lblBtnDel" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice"
        android:layout_below="@android:id/empty"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendMessage"/>
</RelativeLayout>
