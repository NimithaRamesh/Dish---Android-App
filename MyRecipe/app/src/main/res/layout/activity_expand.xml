<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay"
    android:weightSum="1">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="247dp"
        android:id="@+id/imageView"
        android:foregroundGravity="center"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:layout_alignStart="@+id/title"
        android:layout_marginStart="40dp"
        android:layout_alignEnd="@+id/title"
        android:layout_marginEnd="28dp"
        android:layout_above="@+id/title"
        android:layout_marginBottom="61dp" />

    <TextView
        android:layout_width="533dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:textSize="45sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="224dp"
        android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:gravity="center"
        android:id="@+id/publisher"
        android:layout_gravity="center"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:id="@+id/webview1"
        android:layout_weight="0.26"
        android:background="@null"
        android:src="@drawable/internet"
        android:layout_alignTop="@+id/share_button"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/share_button"
        android:layout_toEndOf="@+id/publisher"
        android:layout_marginStart="28dp" />


    <ImageButton
        android:layout_width="133dp"
        android:layout_height="102dp"
        android:text="Share"
        android:src="@drawable/twitter"
        android:id="@+id/share_button"
        android:background="@null"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/recipe_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageButton
        android:id="@+id/recipe_id"
        android:layout_width="169dp"
        android:layout_height="169dp"
        android:src="@drawable/heart"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/publisher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add to Favorites"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/share_button"
        android:layout_alignBottom="@+id/share_button"
        android:layout_marginBottom="75dp"
        android:layout_alignEnd="@+id/recipe_id"
        android:layout_alignStart="@+id/title"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tweet Recipe"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/share_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Show More"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/webview1"
        android:layout_alignEnd="@+id/webview1"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/webview1" />

</RelativeLayout>